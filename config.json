{
  "$schema": "./config.schema.json",
  "metadata": {
    "name": "Russia in Africa Tracker",
    "version": "1.0.0",
    "description": "Event tracking dashboard configuration"
  },
  "theme": {
    "colors": {
      "background": "#fafafa",
      "foreground": "#1a1a1a",
      "muted": "#666",
      "border": "#e0e0e0",
      "borderDark": "#999",
      "hover": "#ffffff",
      "highlight": "#ffffff"
    },
    "typography": {
      "title": {
        "fontFamily": "serif",
        "fontSize": "text-2xl",
        "fontWeight": "font-bold"
      },
      "sectionHeader": {
        "fontSize": "text-base",
        "fontWeight": "font-bold"
      },
      "tableHeader": {
        "fontSize": "text-[10px]",
        "fontWeight": "font-bold",
        "transform": "uppercase"
      },
      "body": {
        "fontSize": "text-xs",
        "fontWeight": "font-normal"
      }
    },
    "spacing": {
      "containerPadding": {
        "x": "px-8",
        "y": "py-6"
      },
      "widgetGap": "gap-6",
      "metricGap": "gap-4",
      "sectionMargin": "mb-6"
    }
  },
  "layout": {
    "maxWidth": "max-w-[1600px]",
    "gridSplit": {
      "left": "55%",
      "right": "45%"
    },
    "widgets": {
      "eventTimeline": {
        "enabled": true,
        "title": "Event Timeline",
        "position": "left",
        "features": {
          "search": true,
          "export": true,
          "sorting": true,
          "resizableColumns": true
        }
      },
      "timelineChart": {
        "enabled": true,
        "title": "Timeline",
        "position": "right-top",
        "height": 260,
        "dateRange": {
          "start": "2025-06-01",
          "end": "2025-10-05"
        },
        "monthLabels": ["Jun", "Jul", "Aug", "Sep", "Oct"]
      },
      "locationWidget": {
        "enabled": true,
        "title": "By Location",
        "position": "right-bottom",
        "features": {
          "mapToggle": true,
          "defaultView": "table"
        }
      },
      "typeMetrics": {
        "enabled": true,
        "position": "top",
        "layout": "grid-cols-4"
      }
    }
  },
  "data": {
    "source": {
      "url": "/data.csv",
      "type": "csv",
      "caching": {
        "enabled": true,
        "duration": 3600000
      }
    },
    "columnMapping": {
      "id": "cluster",
      "date": "Date",
      "firstEventDate": "first_event_date",
      "type": "Type",
      "title": "title",
      "description": "description",
      "eventName": "Event name",
      "sourceUrl": "SOURCEURL",
      "eventLocations": "event_locations",
      "goldsteinScore": "avg_goldstein_score",
      "eventCount": "event_count",
      "actor1Countries": "actor1_countries",
      "actor2Countries": "actor2_countries",
      "actor1Names": "actor1_names",
      "actor2Names": "actor2_names",
      "keywords": "keywords",
      "entities": "combined_text_entities",
      "entityTypes": "combined_text_entity_types",
      "eventDescriptions": "event_descriptions",
      "siteName": "site_name",
      "language": "language",
      "author": "author"
    },
    "validation": {
      "requiredFields": ["date", "type"],
      "filterEmptyTitles": true,
      "excludeValues": {
        "title": ["N/A", ""]
      }
    },
    "types": {
      "ECON": {
        "label": "Economic Influence (ECON)",
        "color": "#f97316",
        "enabled": true
      },
      "SEC": {
        "label": "Military & Security Operations (SEC)",
        "color": "#ef4444",
        "enabled": true
      },
      "DIP": {
        "label": "Diplomatic Engagements (DIP)",
        "color": "#d4a017",
        "enabled": true
      },
      "INFO": {
        "label": "Information Operations (INFO)",
        "color": "#4a9eff",
        "enabled": true
      }
    },
    "processing": {
      "locationDelimiter": "|",
      "dateFormat": "ISO8601",
      "trimWhitespace": true
    }
  },
  "features": {
    "insights": {
      "enabled": true,
      "comingSoon": true
    },
    "crossFiltering": {
      "enabled": true,
      "filters": ["type", "country", "week"]
    },
    "search": {
      "enabled": true,
      "searchFields": ["title", "description", "eventName"],
      "caseSensitive": false
    },
    "export": {
      "enabled": true,
      "format": "csv",
      "filenamePrefix": "russia-africa-events"
    },
    "map": {
      "enabled": true,
      "defaultZoom": 3.5,
      "center": [2, 20],
      "minZoom": 3,
      "maxZoom": 8,
      "tileLayer": "https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png",
      "attribution": "&copy; <a href=\"https://carto.com/attributions\">CARTO</a>"
    },
    "visualization": {
      "timeline": {
        "pointSize": 5,
        "pointOpacity": 0.7,
        "jitterAmount": 18,
        "gridOpacity": 0.5
      }
    }
  },
  "ui": {
    "title": "What's Russia doing in Africa?",
    "subtitle": "A Dynamic Bulletin tracking Russia's geostrategic reputation and influence",
    "loading": {
      "message": "Loading dashboard...",
      "mapMessage": "Loading map..."
    },
    "emptyStates": {
      "noData": "No data available",
      "noResults": "No events match your filters"
    },
    "labels": {
      "filters": "Filters:",
      "clearAll": "Clear all",
      "events": "events",
      "export": "Export",
      "search": "Search...",
      "table": "Table",
      "map": "Map"
    }
  },
  "tableColumns": {
    "eventTimeline": [
      {
        "key": "date",
        "label": "Date",
        "width": 85,
        "sortable": true,
        "resizable": true,
        "format": "date"
      },
      {
        "key": "type",
        "label": "Type",
        "width": 70,
        "sortable": true,
        "resizable": true,
        "colorCoded": true
      },
      {
        "key": "title",
        "label": "Title",
        "width": 180,
        "sortable": true,
        "resizable": true,
        "fontWeight": "font-semibold",
        "fontSize": "text-[13.5px]"
      },
      {
        "key": "description",
        "label": "Description",
        "width": 300,
        "sortable": true,
        "resizable": true
      },
      {
        "key": "source",
        "label": "Source",
        "width": 140,
        "sortable": true,
        "resizable": true,
        "format": "link"
      }
    ],
    "locationTable": [
      {
        "key": "location",
        "label": "Location",
        "align": "left"
      },
      {
        "key": "ECON",
        "label": "Econ",
        "align": "center"
      },
      {
        "key": "SEC",
        "label": "Sec",
        "align": "center"
      },
      {
        "key": "DIP",
        "label": "Dip",
        "align": "center"
      },
      {
        "key": "INFO",
        "label": "Info",
        "align": "center"
      },
      {
        "key": "total",
        "label": "Total",
        "align": "center",
        "fontWeight": "font-bold"
      }
    ]
  },
